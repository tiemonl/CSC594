<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/restaurant_height"
    android:orientation="vertical">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/businessImages"
        android:layout_width="match_parent"
        android:layout_height="@dimen/restaurant_image_height" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/restaurant_detail_height"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/businessInfo"
            android:layout_width="@dimen/restaurant_info_width"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/businessName"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/restaurant_title_height" />

            <LinearLayout
                android:id="@+id/ratingInfo"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/restaurant_info_item_height"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ratingValue"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent" />
                <!-- TODO Add star rating icons -->
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="vertical">

            <TextView
                android:id="@+id/distance"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/restaurant_info_item_height" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/businessDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="2" />
</LinearLayout>